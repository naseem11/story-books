<div class="row">
    
    <div class="col s12 m9">
        

        <div class="card ">
            <div class="card-content ">
                <h4>{{  story.title}} {{{editIcon story.user.id  user.id story.id false }}}</h4>
                <span class="card-title ">{{formatDate story.date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{story.body}}}
            </div>
        </div>
        {{#if story.allowComments}}
         <div class="card ">
            <div class="card-content ">
                
                <span class="card-title ">Comments</span>
                

                {{#if user}}
                <form action="/stories/comment/{{story.id}}" method="post">
              
                <div class="input-field">
                  <textarea name="commentBody" class="materialize-textarea" ></textarea>
                <label for="commentBody">Add Comment</label>
                </div>
                <input  class="btn" type="submit" value="Submit">
                </form>
                {{else}}

                <p>Please <a href="/auth/google">login </a></p> to leave a comment.
                {{/if}}
            </div>
        </div>
        {{#if story.comments}}
        <div class="card">
          
            <div class="card-content">
          {{#each story.comments}}
               
                <h5>{{commentBody}}</h5> 
                <div class="chip">
                    <img src="{{commentUser.image}}"> <a href="/stories/user/{{commentUser.id}}" class="blue-text">{{commentUser.firstName}} {{commentUser.lastName}}</a> 

                </div>
                <br>
                <small>Posted: {{formatDate date 'MMMM Do YYYY'}}</small>

           

                {{/each}}
            </div>
        </div>
        {{/if}}
        {{/if}}
    </div>
    <div class="col s12 m3">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.firstName}} {{story.user.lastName}}          

                </span>
                
                <img src="{{story.user.image}}" alt="user-image" class="responsive-img circle ">
                
            </div>
            <div class="card-action center-align">
                <a href="/stories/user/{{story.user.id}}" >More  from {{story.user.firstName}}</a>
            </div>
        </div>

    </div>
</div>