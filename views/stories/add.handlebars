<h2>Add Story</h2>
<div class="row">
    <form action="/stories/add"  method="POST" class="col s12">
        <div class="row">
            <div class="input-field ">
                <input id="title" type="text" name="title">
                <label for="title">Title</label>
            </div>

        </div>
        <div class="row">
            <div class="input-field ">
                <select name="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>

                </select>
                <label for="status">Set Status</label>
             
            </div>

            <div class="row">
                   <p>
                        <input type="checkbox" class="filled-in" id="filled-in-box" checked="checked" name="allowComments" />
                        <label for="filled-in-box">Allow Comments</label>
                    </p>
            </div>

            <div class="row">
                <div class="input-field mt-20">
                    <h5>Write your story</h5>
                    <textarea name="body" ></textarea>
                   
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <input class="btn" type="submit" value="Save">
                   
                </div>
            </div>
        </div>
    </form>
</div>