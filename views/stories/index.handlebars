<h2>Stories</h2>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card blue-grey darken-1">
            <div class="card-content center-align white-text">
                <span class="card-title">{{title}}</span>
                <div class="divider"></div>
                <p class="story-text">{{stripTags (truncate body 250)}}</p>

            </div>
            <div class="right-align">
                <a href="/stories/show/{{id}}" class="btn  ">Read more</a>
            </div>
            <div class="card-action">

                <div class="chip">

                    <img src="{{user.image}}">
                    <a href="/stories/user/{{user.id}}" class="blue-text">
                        {{user.firstName}} {{user.lastName}}
                    </a>

                </div>

                <div class="right">
                    {{#if user}} {{{editIcon user.id ../user.id id }}} {{/if}}

                </div>



            </div>
        </div>
    </div>
    {{else}}
    <p>No public story found</p>
    {{/each}}
</div>