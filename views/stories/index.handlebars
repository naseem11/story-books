<h2>Stories</h2>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card blue-grey darken-1">
            <div class="card-content center-align white-text">
                <span class="card-title">{{title}}</span>
                <div class="divider"></div>
                <p >{{stripTags (truncate body 150)}}</p>
               
            </div>
           <div class="right-align"> <a href="/stories/show/{{id}}" class="btn ">Read more</a></div>
            <div class="card-action">

                <div class="chip">
                    <img src="{{user.image}}"> {{user.firstName}}

                </div>
                {{#if user}}
                <div class="right">
                    
                     <a class="btn-floating btn-medium waves-effect waves-light red" href="/stories/edit/{{id}}" title="edit story"><i class="fa fa-pencil"></i></a>

                </div>
                {{else}}
               
                {{/if}}
            </div>
        </div>
    </div>
    {{else}}
    <p>No story found</p>
    {{/each}}
</div>